+		goto out_err;
+	}
+
+	/* validate first byte */
+	if (unlikely(buf[0] != addr)) {
+		ret = (buf[0] == '\0') ? -EAGAIN : -EIO;
+		goto out_err;
+	}
+
+	/* validate second byte (protocol flag) */
+	if (unlikely((buf[1] & 0x80) != (p_flag << 7))) {
+		if (!p_flag || !(quirks & DDCCI_QUIRK_NO_PFLAG)) {
+			ret = -EIO;
+			goto out_err;
